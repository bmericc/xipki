<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
    xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.0.0">
  <cm:property-placeholder persistent-id="org.xipki.commons.security" update-strategy="reload">
    <cm:default-properties>
      <cm:property name="key.strongrandom.enabled" value="true"/>
      <cm:property name="sign.strongrandom.enabled" value="false"/>
      <cm:property name="hostnameVerifier.enabled" value="false"/>
      <cm:property name="hostnameVerifier.trustAll" value="false"/>
      <cm:property name="hostnameVerifier.commonnameHostMap" value=""/>
      <cm:property name="defaultParallelism" value="20"/>
      <cm:property name="pkcs11.confFile" value=""/>
      <cm:property name="pkcs11.provider"
          value="org.xipki.commons.security.p11.iaik.IaikP11CryptServiceFactory"/>
      <cm:property name="signerType.map" value=""/>
    </cm:default-properties>
  </cm:property-placeholder>

  <reference id="passwordResolver" interface="org.xipki.commons.password.api.PasswordResolver"/>

  <bean id="XipkiProviderNssRegister"
      class="org.xipki.commons.security.p11.sun.nss.XipkiNssProviderRegister"
      init-method="regist" destroy-method="unregist"/>

  <bean id="securityFactoryImpl" class="org.xipki.commons.security.SecurityFactoryImpl">
    <property name="strongRandom4KeyEnabled" value="${key.strongrandom.enabled}"/>
    <property name="strongRandom4SignEnabled" value="${sign.strongrandom.enabled}"/>
    <property name="pkcs11Provider" value="${pkcs11.provider}"/>
    <property name="defaultParallelism" value="${defaultParallelism}"/>
    <property name="pkcs11ConfFile" value="${pkcs11.confFile}"/>
    <property name="passwordResolver" ref="passwordResolver"/>
    <property name="signerTypeMap" value="${signerType.map}"/>
  </bean>
  <service ref="securityFactoryImpl" interface="org.xipki.commons.security.api.SecurityFactory"/>
  <bean id="XipkiProviderRegister"
      class="org.xipki.commons.security.provider.XipkiProviderRegister"
      init-method="regist" destroy-method="unregist">
    <property name="securityFactory" ref="securityFactoryImpl"/>
  </bean>
  <bean id="httpHostnameVerifier" class="org.xipki.commons.security.HttpsHostnameVerifier"
      init-method="init" destroy-method="shutdown">
    <property name="enabled" value="${hostnameVerifier.enabled}"/>
    <property name="trustAll" value="${hostnameVerifier.trustAll}"/>
    <property name="commonnameHostMap" value="${hostnameVerifier.commonnameHostMap}"/>
  </bean>

  <bean id="p12KeypairGenerator" class="org.xipki.commons.security.p12.P12KeypairGeneratorImpl">
  </bean>
  <service ref="p12KeypairGenerator"
      interface="org.xipki.commons.security.api.p12.P12KeypairGenerator"/>
  
</blueprint>
