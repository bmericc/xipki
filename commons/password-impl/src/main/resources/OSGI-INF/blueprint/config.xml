<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
    xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.0.0">
  <cm:property-placeholder persistent-id="org.xipki.commons.password" update-strategy="reload">
    <cm:default-properties>
      <cm:property name="masterPassword.callback"
          value="org.xipki.commons.password.GuiPasswordCallback"/>
    </cm:default-properties>
  </cm:property-placeholder>

  <bean id="passwordResolver" class="org.xipki.commons.password.impl.PasswordResolverImpl"/>
  <reference-list id="singlePasswordResolvers"
      interface="org.xipki.commons.password.api.SinglePasswordResolver" availability="optional">
    <reference-listener ref="passwordResolver" bind-method="bindService"
        unbind-method="unbindService"/>
  </reference-list>
  <service ref="passwordResolver" interface="org.xipki.commons.password.api.PasswordResolver"/>

  <bean id="obfSinglePasswordResolver" class="org.xipki.commons.password.impl.OBFSinglePasswordResolverImpl"/>
  <service ref="obfSinglePasswordResolver"
      interface="org.xipki.commons.password.api.SinglePasswordResolver"/>

  <bean id="pbeSinglePasswordResolver" class="org.xipki.commons.password.impl.PBESinglePasswordResolverImpl">
    <property name="masterPasswordCallback" value="${masterPassword.callback}"/>
  </bean>
  <service ref="pbeSinglePasswordResolver"
      interface="org.xipki.commons.password.api.SinglePasswordResolver"/>

  <bean id="obfPasswordService" class="org.xipki.commons.password.impl.OBFPasswordServiceImpl"/>
  <service ref="obfPasswordService"
      interface="org.xipki.commons.password.api.OBFPasswordService"/>

  <bean id="pbePasswordService" class="org.xipki.commons.password.impl.PBEPasswordServiceImpl"/>
  <service ref="pbePasswordService"
      interface="org.xipki.commons.password.api.PBEPasswordService"/>

</blueprint>
