<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
    xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.0.0">
  <cm:property-placeholder persistent-id="org.xipki.commons.password" update-strategy="reload">
    <cm:default-properties>
      <cm:property name="masterPassword.callback" value="PBE-GUI"/>
    </cm:default-properties>
  </cm:property-placeholder>

  <bean id="factory" class="org.xipki.commons.password.impl.callback.PasswordCallbackFactoryImpl"/>
  <service ref="factory" interface="org.xipki.commons.password.api.PasswordCallbackFactory"/>

  <reference id="callbackFactoryRegister"
      interface="org.xipki.commons.password.api.PasswordCallbackFactoryRegister"/>

  <bean id="pbeSinglePasswordResolver"
      class="org.xipki.commons.password.impl.PBESinglePasswordResolverImpl">
    <property name="callbackFactoryRegister" ref="callbackFactoryRegister"/>
    <property name="masterPasswordCallback" value="${masterPassword.callback}"/>
  </bean>
  <service ref="pbeSinglePasswordResolver"
      interface="org.xipki.commons.password.api.SinglePasswordResolver"/>

  <bean id="pbePasswordService" class="org.xipki.commons.password.impl.PBEPasswordServiceImpl"/>
  <service ref="pbePasswordService"
      interface="org.xipki.commons.password.api.PBEPasswordService"/>

</blueprint>
