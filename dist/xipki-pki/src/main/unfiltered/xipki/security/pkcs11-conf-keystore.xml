<?xml version="1.0" encoding="UTF-8"?>
<PKCS11Conf xmlns="http://xipki.org/commons/security/pkcs11/conf/v2">
  <modules>
    <!-- exactly one module must be named 'default' -->
    <module name="default">
      <nativeLibraries>
        <nativeLibrary>
          <path>etc/keystore-p11</path>
        </nativeLibrary>
      </nativeLibraries>
      <excludeSlots>
        <!-- Slot 0 is the management slot -->
        <slot>
          <index>0</index>
        </slot>
      </excludeSlots>
      <readonly>false</readonly>
      <passwords>
        <password>
          <singlePassword>1234</singlePassword>
        </password>
      </passwords>
    </module>
  </modules>
</PKCS11Conf>
