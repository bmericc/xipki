<?xml version="1.0" encoding="UTF-8"?>
<assembly>
  <id>unix-bin</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <fileSets>
    <!-- Copy demo resources -->
    <fileSet>
      <directory>${project.basedir}/../pki/src/main/unfiltered/xipki/demo</directory>
      <includes>
        <include>p12/ca-rsa/**</include>
        <include>p12/ee/SCEP1.p12</include>
        <include>camgmt-qa.script</include>
        <include>demo.d/prepare.script</include>
        <include>demo.d/p12.script</include>
        <include>demo.d/scep-server.script</include>
        <include>profile/**</include>
      </includes>
      <outputDirectory>xipki/demo</outputDirectory>
      <filtered>false</filtered>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    <!-- Copy TLS keys -->
    <fileSet>
      <directory>${project.basedir}/../demo-tlskeys</directory>
      <outputDirectory>xipki/security/tlskeys</outputDirectory>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
  </fileSets>
  <componentDescriptors>
    <componentDescriptor>${shared.dir}/descriptors/component-common.xml</componentDescriptor>
  </componentDescriptors>
</assembly>
