feature:install xipki-ocspclient-shell

# Wait one second
sleep 1000

echo "Loadtest OCSP status (database based cert source)"
ocsp:loadtest-status -cacert output/SubCA1.der -duration 15 -serial 1-500 -thread 8

echo "Loadtest OCSP status (CRL based cert source)"
ocsp:loadtest-status -cacert output/SubCAwithCRL1.der -duration 15 -serial 1-2 -thread 8

feature:uninstall xipki-ocspclient-shell
