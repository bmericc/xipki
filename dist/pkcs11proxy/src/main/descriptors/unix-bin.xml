<?xml version="1.0" encoding="UTF-8"?>
<assembly>
  <id>unix-bin</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <fileSets>
    <!--
        Copy TLS keys
    -->
    <fileSet>
      <directory>${project.basedir}/../demo-tlskeys</directory>
      <outputDirectory>etc/tlskeys</outputDirectory>
      <includes>
        <include>tls-server-keystore.jks</include>
        <include>tls-server-truststore.jks</include>
      </includes>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    <!-- Copy over everything that needs to get unix line endings -->
    <fileSet>
      <directory>${project.build.directory}/classes/etc</directory>
      <outputDirectory>etc/</outputDirectory>
      <lineEnding>unix</lineEnding>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    <!-- Copy over everything unfiltered ressources -->
    <fileSet>
      <directory>${project.basedir}/src/main/unfiltered</directory>
      <outputDirectory>.</outputDirectory>
      <filtered>false</filtered>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/features-repo</directory>
      <outputDirectory>system</outputDirectory>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    <fileSet>
      <directory>${shared.dir}/unfiltered</directory>
      <includes>
        <include>**/*.sh</include>
      </includes>
      <outputDirectory>.</outputDirectory>
      <lineEnding>unix</lineEnding>
      <filtered>false</filtered>
      <fileMode>0755</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    <fileSet>
      <directory>${shared.dir}/unfiltered</directory>
      <excludes>
        <exclude>**/*.sh</exclude>
        <exclude>**/*.bat</exclude>
      </excludes>
      <outputDirectory>.</outputDirectory>
      <filtered>false</filtered>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/xipki</directory>
      <outputDirectory>xipki</outputDirectory>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    <!-- Copy over start scripts -->
    <fileSet>
      <!-- in case we replace them with updated scripts
      <directory>${project.basedir}/src/main/bin/unix</directory>
      -->
      <directory>${project.build.directory}/dependencies/apache-karaf-${karaf.version}/bin</directory>
      <outputDirectory>bin/</outputDirectory>
      <lineEnding>unix</lineEnding>
      <fileMode>0755</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    <!-- Expanded Karaf -->
    <fileSet>
      <directory>${project.build.directory}/dependencies/apache-karaf-${karaf.version}</directory>
      <outputDirectory>.</outputDirectory>
      <excludes>
        <!--
            exclude files and directories without replacement
        -->
        <exclude>**/demos/**</exclude>
        <exclude>deploy/README</exclude>
        <exclude>LICENSE</exclude>
        <exclude>NOTICE</exclude>
        <exclude>RELEASE-NOTES</exclude>
        <exclude>karaf-manual*</exclude>
      </excludes>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>${project.basedir}/../../LICENSE</source>
      <outputDirectory>license</outputDirectory>
      <destName>xipki-LICENSE</destName>
      <fileMode>0644</fileMode>
      <lineEnding>unix</lineEnding>
    </file>
    <file>
      <source>${project.build.directory}/dependencies/apache-karaf-${karaf.version}/LICENSE</source>
      <outputDirectory>license</outputDirectory>
      <destName>karaf-LICENSE.txt</destName>
      <fileMode>0644</fileMode>
      <lineEnding>unix</lineEnding>
    </file>
  </files>
</assembly>
